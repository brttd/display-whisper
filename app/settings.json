{
    "general": {
        "name": "General",

        "control": {
            "description": "Main",
            "map": "presentation",

            "entries": {
                "autoSaveInterval": {
                    "description": "Auto-save time",
                    "type": "number",
                    "unit": "seconds",

                    "min": 3,
                    "max": 3600,
                    "step": 10,
                    "precision": 0,

                    "popupMin": 10,
                    "popupMax": 600,

                    "default": 30
                },

                "autoUpdateSongs": {
                    "description": "Automatically update song search results when song library is modified",
                    "type": "boolean",

                    "default": true
                }
            }
        },

        "presentation": {
            "description": "Presentation",
            "map": "presentation",

            "entries": {
                "maxLists": {
                    "description": "Maximum amount of lists",
                    "type": "number",

                    "min": 1,
                    "max": 10,

                    "precision": 0,
                    "popupMax": 5,

                    "default": 3
                },

                "removeHistoryCount": {
                    "description": "Maximum remove history size",
                    "type": "number",

                    "min": 0,
                    "max": 100,
                    "precision": 0,

                    "popupMax": 50,

                    "default": 5
                }
            }
        },

        "presentationItems": {
            "description": "Presentation List",
            "map": "presentation",

            "entries": {
                "autoMinimize": {
                    "description": "Automatically minimize multi-section items",
                    "type": "boolean",

                    "default": true
                },
                "showSectionWhenMinimized": {
                    "description": "Show first section in minimized items",
                    "type": "boolean",

                    "default": true
                },

                "autoScroll": {
                    "description": "Automatically scroll selected section into view",
                    "type": "boolean",

                    "default": true
                },
                "scrollSmooth": {
                    "description": "Animate scrolling",
                    "type": "boolean",

                    "default": true
                }
            }
        },

        "print": {
            "description": "Print Options",
            "map": "print",

            "entries": {
                "showInfo": {
                    "description": "Show print tool information in default page setup",
                    "type": "boolean",

                    "default": true
                }
            }
        },

        "debug": {
            "description": "Debug",
            "map": "debug",

            "entries": {
                "enable": {
                    "description": "Enable debug mode",
                    "type": "boolean",

                    "default": false
                }
            }
        }
    },
    "songs": {
        "name": "Songs",

        "playOrder": {
            "description": "Play Order",
            "map": "songs",

            "entries": {
                "startBlank": {
                    "description": "Add blank section to start",
                    "type": "boolean",

                    "default": true
                },
                "showIntro": {
                    "description": "Add intro section to start",
                    "type": "boolean",

                    "default": false
                },
                "showOutro": {
                    "description": "Add outro section to end",
                    "type": "boolean",

                    "default": false
                },
                "endBlank": {
                    "description": "Add blank section to end",
                    "type": "boolean",

                    "default": true
                }
            }
        },

        "missingInfo": {
            "description": "Missing Information",

            "map": "songs",

            "entries": {
                "warnMissingInfo": {
                    "description": "Show warning when song with missing information is added to the presentation",
                    "type": "boolean",

                    "default": true
                }
            }
        }
    },
    "shortcuts": {
        "name": "Shortcuts",

        "presentation": {
            "description": "Control Keyboard Shortcuts",
            "map": "control.keyboard",

            "entries": {
                "repeat": {
                    "description": "Execute actions repeatedly while shortcut is held",
                    "type": "boolean",

                    "default": false
                },

                "selectNext": {
                    "description": "Select next section",
                    "type": "key",

                    "default": "ArrowDown"
                },
                "selectPrevious": {
                    "description": "Select previous section",
                    "type": "key",

                    "default": "ArrowUp"
                },
                "selectNextItem": {
                    "description": "Select next item",
                    "type": "key",

                    "default": "Control+ArrowDown"
                },
                "selectPreviousItem": {
                    "description": "Select previous item",
                    "type": "key",

                    "default": "Control+ArrowUp"
                },

                "playSelected": {
                    "description": "Play selected section",
                    "type": "key",

                    "default": "Enter"
                },

                "playNext": {
                    "description": "Play (and select) next section",
                    "type": "key",

                    "default": "Space"
                },
                "playPrevious": {
                    "description": "Play (and select) previous section",
                    "type": "key",

                    "default": "Control+Space"
                },

                "moveSelectedDown": {
                    "description": "Move selected item down in presentation",
                    "type": "key",

                    "default": "PageDown"
                },
                "moveSelectedUp": {
                    "description": "Move selected item up in presentation",
                    "type": "key",

                    "default": "PageUp"
                },
                "moveSelectedBottom": {
                    "description": "Move selected item to bottom of presentation",
                    "type": "key",

                    "default": "Control+PageDown"
                },
                "moveSelectedTop": {
                    "description": "Move selected item to top of presentation",
                    "type": "key",

                    "default": "Control+PageUp"
                }
            }
        },
        "lists": {
            "description": "Presentation Lists",
            "map": "control.keyboard",

            "entries": {
                "focusListUp": {
                    "description": "Focus List Above",
                    "type": "key",

                    "default": "Control+Shift+ArrowUp"
                },
                "focusListDown": {
                    "description": "Focus List Below",
                    "type": "key",

                    "default": "Control+Shift+ArrowDown"
                },
                "focusList1": {
                    "description": "Focus List 1",
                    "type": "key",

                    "default": "Control+Shift+Digit1"
                },
                "focusList2": {
                    "description": "Focus List 2",
                    "type": "key",

                    "default": "Control+Shift+Digit2"
                },
                "focusList3": {
                    "description": "Focus List 3",
                    "type": "key",

                    "default": "Control+Shift+Digit3"
                }
            }
        },
        "display": {
            "description": "Display Keyboard Shortcuts",
            "map": "control.keyboard",

            "entries": {
                "disableDisplay": {
                    "description": "Turn all displays off",
                    "type": "key",

                    "default": "Escape"
                },

                "toggleBlank": {
                    "description": "Toggle display blanked",
                    "type": "key",

                    "default": "Period"
                }
            }
        }
    },
    "display": {
        "name": "Display",

        "screen": {
            "description": "Screen",
            "map": "display",

            "entries": {
                "hideCursor": {
                    "description": "Hide cursor on display",
                    "type": "boolean",

                    "default": false
                },
                "simpleFullscreen": {
                    "description": "(MacOS) Use simple (Pre-Lion) fullscreen display mode",
                    "type": "boolean",

                    "default": true
                },
                "allWorkspaces": {
                    "description": "(MacOS) Show display on all workspaces",
                    "type": "boolean",

                    "default": true
                },
                "masterScale": {
                    "description": "Master display size",
                    "type": "select",

                    "default": "Largest",

                    "options": ["Smallest", "Average", "Largest", "Custom"]
                },
                "customWidth": {
                    "description": "Custom master display width",
                    "type": "number",

                    "min": 1,
                    "default": 1366,
                    "max": 99999,
                    "step": 2,
                    "precision": 0,

                    "popupMin": 320,
                    "popupMax": 8192
                },
                "customHeight": {
                    "description": "Custom master display height",
                    "type": "number",

                    "min": 1,
                    "default": 768,
                    "max": 99999,
                    "step": 2,
                    "precision": 0,

                    "popupMin": 200,
                    "popupMax": 4320
                },
                "useLetterbox": {
                    "description": "Letterbox displays",
                    "type": "boolean",

                    "default": true
                },
                "letterboxColor": {
                    "description": "Letterbox color",
                    "type": "color",

                    "default": "black"
                }
            }
        },

        "display": {
            "description": "Text Scaling",
            "map": "presentation",

            "entries": {
                "autoFitText": {
                    "description": "Scale text & unify items when added to presentation",
                    "type": "boolean",

                    "default": true
                },
                "autoFitTextOpen": {
                    "description": "Scale text & unify all items when opening a presentation",
                    "type": "boolean",

                    "default": true
                },
                "increaseSizeOnFit": {
                    "description": "Increase text size when scaled",
                    "type": "boolean",

                    "default": false
                },
                "minTextSize": {
                    "description": "Minimum text size",
                    "type": "number",
                    "unit": "px",

                    "min": 1,
                    "max": 999,
                    "precision": 1,

                    "popupMin": 2,
                    "popupMax": 50,

                    "default": 10
                },
                "reduceTextSize": {
                    "description": "Always scale text which is too large",
                    "type": "boolean",

                    "default": true
                }
            }
        },

        "defaults": {
            "description": "Defaults",
            "map": "defaults",

            "entries": {
                "background": {
                    "description": "Background color",
                    "type": "color",

                    "default": "#ffffff"
                },
                "backgroundScale": {
                    "description": "Background image size",
                    "type": "select",
                    "options": ["fill", "fit", "stretch"],

                    "default": "fill"
                },
                "font": {
                    "description": "Font",
                    "type": "font",

                    "default": "Arial"
                },
                "size": {
                    "description": "Text size",
                    "type": "number",
                    "unit": "px",

                    "min": 1,
                    "max": 999,
                    "precision": 0,

                    "popupMin": 5,
                    "popupMax": 200,

                    "default": 100
                },
                "color": {
                    "description": "Text color",
                    "type": "color",

                    "default": "#000000"
                },
                "lineHeight": {
                    "description": "Line height",
                    "type": "number",

                    "min": 0.1,
                    "max": 5,
                    "step": 0.1,
                    "precision": 2,

                    "popupMin": 1,
                    "popupMax": 3,

                    "default": 1.5
                },
                "transitionType": {
                    "description": "Transition type",
                    "type": "select",
                    "options": ["fade"],

                    "default": "fade"
                },
                "transitionTime": {
                    "description": "Transition time",
                    "type": "number",
                    "unit": "ms",

                    "min": 0,
                    "max": 36000,
                    "step": 0.1,
                    "precision": 2,

                    "popupMax": 100,

                    "default": 0
                }
            }
        }
    }
}
